{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "lib": ["ES2019"],
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "rootDir": "./src",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "build"]
}
