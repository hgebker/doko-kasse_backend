{
  "name": "dokokasse-lambda",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "deploy": "sam deploy --template-file template.yml --stack-name dokokasse-stack --capabilities CAPABILITY_IAM CAPABILITY_NAMED_IAM CAPABILITY_AUTO_EXPAND --region eu-central-1 --s3-bucket dokokasse-bucket",
    "lint": "eslint ./{clients,modules,routes}/**/*.js",
    "format": "prettier --write \"**/*.{css,html,js,ts,tsx,json,md,yaml,yml}\""
  },
  "dependencies": {
    "aws-sdk": "^2.848.0",
    "aws-serverless-express": "^3.4.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{css,html,js,ts,tsx,json,yaml,yml,md}": [
      "prettier --write"
    ],
    "**/{src,public}/**/*.{js,ts,tsx}": [
      "eslint"
    ]
  }
}
