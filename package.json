{
  "name": "dokokasse-lambda",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "deploy": "tsc && sam deploy --template-file template.yml --stack-name dokokasse-stack --capabilities CAPABILITY_IAM CAPABILITY_NAMED_IAM CAPABILITY_AUTO_EXPAND --region eu-central-1 --s3-bucket dokokasse-bucket",
    "lint": "eslint ./{clients,modules,routes}/**/*.js",
    "format": "prettier --write \"**/*.{css,html,js,ts,tsx,json,md,yaml,yml}\""
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.7.0",
    "aws-sdk": "^2.857.0",
    "aws-serverless-express": "^3.4.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "lodash": "^4.17.21",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.72",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.8.0",
    "@types/lodash": "^4.14.168",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{css,html,js,ts,tsx,json,yaml,yml,md}": [
      "prettier --write"
    ],
    "**/{src,public}/**/*.{js,ts,tsx}": [
      "eslint"
    ]
  }
}
